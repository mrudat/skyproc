<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>mod</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/html</directory>
            <outputDirectory>Skyproc Patchers/SUM/Readme</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>Files/MemTester.jar</source>
            <destName>MemTester.jar</destName>
            <outputDirectory>Skyproc Patchers/SUM/Files</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/SUM.jar</source>
            <destName>SUM.jar</destName>
            <outputDirectory>Skyproc Patchers/SUM</outputDirectory>
        </file>
    </files>
</assembly>